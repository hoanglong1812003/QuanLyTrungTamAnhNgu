@model IEnumerable<QuanLyTrungTamAnhNgu.Data.Baitap>

@{
    ViewData["Title"] = "Bài tập";
}

<div class="container mt-4">
    <h1 class="mb-4">Danh sách bài tập</h1>
    <a class="btn btn-primary mb-3" href="/Homecontroller1/Index"><i class="fas fa-home"></i> Quay về trang chủ</a>
    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Tạo bài tập mới</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Tenbt)</th>
                <th>@Html.DisplayNameFor(model => model.Tgbatdau)</th>
                <th>@Html.DisplayNameFor(model => model.Tgketthuc)</th>
                <th>@Html.DisplayNameFor(model => model.Ketqua)</th>
                <th>@Html.DisplayNameFor(model => model.Danhgia)</th>
                <th>@Html.DisplayNameFor(model => model.MagvNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.MahvNavigation)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Tenbt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tgbatdau)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tgketthuc)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ketqua)</td>
                    <td>@Html.DisplayFor(modelItem => item.Danhgia)</td>
                    <td>@Html.DisplayFor(modelItem => item.MagvNavigation.Magv)</td>
                    <td>@Html.DisplayFor(modelItem => item.MahvNavigation.Mahv)</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Mabt">Chỉnh sửa</a>
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Mabt">Chi tiết</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Mabt">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add Bootstrap JS for interactivity, optional -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>