@model IEnumerable<QuanLyTrungTamAnhNgu.Data.Nhanvien>


@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Danh sách nhân viên</h1>
        <a class="btn btn-primary mb-3" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Quay về trang chủ</a>
        <p>
            <a class="btn btn-primary" asp-action="Create">Thêm nhân viên</a>
        </p>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Mã nhân viên</th>
                    <th>Tên nhân viên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Địa chỉ</th>
                    <th>CCCD</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Chức vụ</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Manv)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tennv)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ngaysinh)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gioitinh)</td>
                        <td>@Html.DisplayFor(modelItem => item.Diachi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Socccd)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sdt)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Chucvu)</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Manv">Chỉnh sửa</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Manv">Chi tiết</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Manv">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>