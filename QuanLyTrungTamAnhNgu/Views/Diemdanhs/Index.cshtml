@model IEnumerable<QuanLyTrungTamAnhNgu.Data.Diemdanh>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-4">Danh sách Điểm danh</h1>
    <a class="btn btn-primary mb-3" href="/Homecontroller1/Index"><i class="fas fa-home"></i> Quay về trang chủ</a>
    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Mã điểm danh</th>
                    <th>Trạng thái</th>
                    <th>Ngày học</th>
                    <th>Ca học</th>
                    <th>Ghi chú</th>
                    <th>Giáo viên</th>
                    <th>Học viên</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Madd)</td>
                        <td>@Html.DisplayFor(modelItem => item.Trangthai)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ngayhoc)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cahoc)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ghichu)</td>
                        <td>@Html.DisplayFor(modelItem => item.MagvNavigation.Magv)</td>
                        <td>@Html.DisplayFor(modelItem => item.MahvNavigation.Mahv)</td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Madd">Sửa</a>
                            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Madd">Chi tiết</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Madd">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
