@model IEnumerable<QuanLyTrungTamAnhNgu.Data.Lichhoc>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-4">Danh sách Lịch học</h1>
    <a class="btn btn-primary mb-3" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Quay về trang chủ</a>
    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Tuần</th>
                    <th>Ca học</th>
                    <th>Ngày học</th>
                    <th>Ghi chú</th>
                    <th>Học viên</th>
                    <th>Lớp học</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Tuan)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cahoc)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ngayhoc)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ghichu)</td>
                        <td>@Html.DisplayFor(modelItem => item.MahvNavigation.Mahv)</td>
                        <td>@Html.DisplayFor(modelItem => item.MalopNavigation.Malop)</td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Malh">Sửa</a>
                            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Malh">Chi tiết</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Malh">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
